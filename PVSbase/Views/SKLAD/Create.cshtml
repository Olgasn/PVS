    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.НаименованиеПомещения)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.НаименованиеПомещения)
            @Html.ValidationMessageFor(model => model.НаименованиеПомещения)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Инвентарный_Номер)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Инвентарный_Номер)
            @Html.ValidationMessageFor(model => model.Инвентарный_Номер)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Площадь)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Площадь)
            @Html.ValidationMessageFor(model => model.Площадь)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Вместимость_В_Тоннах)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Вместимость_В_Тоннах)
            @Html.ValidationMessageFor(model => model.Вместимость_В_Тоннах)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Процент_Заполнения)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Процент_Заполнения)
            @Html.ValidationMessageFor(model => model.Процент_Заполнения)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Ответственный, "Сотрудники")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Ответственный", String.Empty)
            @Html.ValidationMessageFor(model => model.Ответственный)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Степень_Изношенности_Помещения)
