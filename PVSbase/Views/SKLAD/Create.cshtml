            @Html.ValidationMessageFor(model => model.Дата_Последней_Проверки_Пожарной_Инспекции)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Дополнительный_Отметки)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Дополнительный_Отметки)
            @Html.ValidationMessageFor(model => model.Дополнительный_Отметки)
        </div>

        <p>
            <input type="submit" value="Создать" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
